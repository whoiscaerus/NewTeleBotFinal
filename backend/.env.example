# Application Configuration
APP_NAME=fxpro-trading-bot
APP_ENV=development
APP_VERSION=0.1.0
APP_BUILD=local
APP_LOG_LEVEL=INFO
APP_REQUEST_ID_HEADER=X-Request-Id

# Database Configuration
DB_DSN=postgresql+psycopg://user:password@localhost:5432/fxpro_dev
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_ECHO=false

# HMAC Signature Validation (Signals Domain)
HMAC_PRODUCER_ENABLED=false
HMAC_PRODUCER_SECRET=your-secret-key-here-change-in-production

# Signal Configuration
SIGNALS_PAYLOAD_MAX_BYTES=32768
